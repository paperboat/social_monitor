<h1>Listing pages</h1>

<table>
  <tr>
    <th>Website</th>
    <th>Body</th>
    <th>Code</th>
    <th>Depth</th>
    <th>Headers</th>
    <th>Redirect to</th>
    <th>Referer</th>
    <th>Response time</th>
    <th>Url</th>
    <th>Page title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.website_id %></td>
    <td><%= page.body %></td>
    <td><%= page.code %></td>
    <td><%= page.depth %></td>
    <td><%= page.headers %></td>
    <td><%= page.redirect_to %></td>
    <td><%= page.referer %></td>
    <td><%= page.response_time %></td>
    <td><%= page.url %></td>
    <td><%= page.page_title %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

