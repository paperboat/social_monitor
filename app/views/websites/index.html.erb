<h1>Listing websites</h1>

<table>
  <tr>
    <th>User</th>
    <th>Root url</th>
    <th>Name</th>
    <th>Last crawl</th>
    <th>Frequency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @websites.each do |website| %>
  <tr>
    <td><%= website.user_id %></td>
    <td><%= website.root_url %></td>
    <td><%= website.name %></td>
    <td><%= website.last_crawl %></td>
    <td><%= website.frequency %></td>
    <td><%= link_to 'Show', website %></td>
    <td><%= link_to 'Edit', edit_website_path(website) %></td>
    <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

